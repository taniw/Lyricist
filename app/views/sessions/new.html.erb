<h1>LOGIN</h1>

<%= form_for :user, url: "/sessions", method: "post" do |f| %>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>
  <div>
    Username: <%= f.text_field :username, placeholder: "Username" %>
  </div>
  <div>
    Password: <%= f.text_field :password, placeholder: "Password", type: "password" %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
