<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<p>Welcome, <%= current_user.username %>!</p>

<div class="container">
	

	<div>
		<div class="favorites-title">Favorite Songs</div>
		<div class="row favorites-list">
			<ul class="results-list">
				<% @favorites.each do |favorite| %>
				<div class="favorite-song-<%= favorite.id %>">
					<div class="delete-btn" onclick="Lyricist.deleteFavorite( <%= favorite.id %> )"><button class="btn btn-danger">Delete</button></div>
					<div><%= favorite.artist %></div>
					<div><%= favorite.title %></div>
					<div><%= favorite.lyrics %></div>
				</div>
				<% end %>
			</ul> 
		</div>
	</div>


</div>


